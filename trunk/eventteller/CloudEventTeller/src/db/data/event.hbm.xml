<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="db.data">
	<class
		name="event"
		table="event_day" dynamic-update="true"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="id"
			type="integer"
			column="id"
		>
		<generator class="native"></generator>
		</id>		
		<property
			name="title"
			column="title"
			type="string"
			not-null="false"
			length="1000"
		/>
		<property
			name="summarywords"
			column="summarywords"
			type="string"
			not-null="false"
		/>
		<property
			name="summary"
			column="summary"
			type="string"
			not-null="false"
		/>
		<property
			name="day"
			column="day"
			type="integer"
			not-null="false"
			length="32"
		/>
		<property 
			name="number"
			column="number"
			type="integer"
			not-null="false"
			length="32"
		/>
		<property
			name="articles"
			column="articles"
			type="string"
			not-null="false"
		/>
		<property
			name="time"
			column="time"
			type="java.util.Date"
			not-null="false"
			length="14"
		/>
		<property
			name="taskstatus"
			column="taskstatus"
			type="integer"
			not-null="false"
			length="32"
		/>
		<property
			name="topicid"
			column="topic"
			type="integer"
			not-null="false"
			length="32"
		/>
		<property
			name="img"
			column="img"
			type="string"
			not-null="false"
			length="1000"
		/>
		<property
			name="subtopicid"
			column="subtopicid"
			type="integer"
			not-null="false"
			length="32"
		/>
		<property
			name="province"
			column="province"
			type="integer"
			not-null="false"
			length="32"
		/>
	</class>	
</hibernate-mapping>